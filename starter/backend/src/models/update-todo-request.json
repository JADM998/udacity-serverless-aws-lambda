{
    "$schema": "https://json-schema.org/draft-04/schema#",
    "title": "todo",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 3
        },
        "dueDate": {
            "type": "string",
            "pattern": "^\\d{4}-(0[1-9]|1[0-2])-([0-2][0-9]|3[0-1])$"
        },
        "done": {
            "type": "boolean"
        }
    },
    "anyOf":[
        { "required": ["name"] },
        { "required": ["dueDate"] },
        { "required": ["done"] }
    ],
    "additionalProperties": false
}