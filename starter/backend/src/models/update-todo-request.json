{
    "$schema": "https://json-schema.org/draft-04/schema#",
    "title": "todo",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "dueDate": {
            "type": "string"
        },
        "done": {
            "type": "boolean"
        }
    },
    "anyOf":[
        { "required": ["name"] },
        { "required": ["dueDate"] },
        { "required": ["done"] }
    ],
    "additionalProperties": false
}